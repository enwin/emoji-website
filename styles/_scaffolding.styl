.wrapper
   margin: 0 auto
   max-width: rnd( 736em/$fz )
   padding: 0 rnd( 16em/$fz )

/* != Header
--------------------------------------------------------------------------- */
header[role=banner]
   //border-bottom: 1px solid $grey-light
   background-color: $grey
   box-shadow: 0 0 20px rgba( $grey, 0.3 )
   color: $light
   padding: 1em 0 0
   text-align: center

   .tt
      font-weight: normal
      margin: 0
      overflow: hidden
      text-align: center

   svg
      background-color: $blue
      border-radius: 50%
      box-shadow: 0 0 20px rgba( black, 0.2 )
      display: block
      height: 20%
      margin: 0 auto
      max-width: rnd( 184rem/$fz )
      padding: rnd( 14rem/$fz ) rnd( 15rem/$fz ) rnd( 16rem/$fz )
      width: 20%

   p
      margin: 0 0 rnd( 5em/$fz )
      text-align: center
      line-height: 2

nav[role=navigation]
   margin: 0 auto
   max-width: rnd( 400em/$fz )

   ul
      display: table
      width: 100%

   li
      display: table-cell

   a
      border-bottom: 4px solid transparent
      display: block
      padding: 1em rnd( 10em/$fz )
      text-decoration: none
      transition: background-color 0.3s ease-in-out, border 0.3s ease-in-out
      -webkit-touch-callout: none
      -webkit-tap-highlight-color: rgba(0,0,0,0)

      &::selection
         background: none

      &:hover
      &:focus
      &:active
         outline: none
         background-color: $grey-dark
         border-color: $light

      &:hover
         transition-delay: 0.1s

/* != Footer
--------------------------------------------------------------------------- */
footer[role=contentinfo]
   background-color: $grey-dark
   color: $light
   overflow: hidden
   text-align: center

   p
      padding: 0 rnd( 16em/$fz )

   a
      color: $blue


/* != Main
--------------------------------------------------------------------------- */
main

   .intro
   section
      margin: rnd( 50em/$fz ) 0

      a
         color: $blue

   figure
      margin-bottom: rnd( 30em/$fz )

      img
         box-shadow: 0 0 10px rgba( $grey-dark, 0.3 )
         width: 100%

   figcaption
      margin: rnd( 10em/$fz ) 0

.marketplace
   display: block
   margin: 0 auto
   width: rnd( 172em/$fz )

   img
      display: block

